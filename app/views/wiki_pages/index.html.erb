<h1>Pages for Topic: <%= @wiki_topic.title %></h1>

<% if @wiki_topic.wiki_pages.present? %>
  <ul>
    <% @wiki_topic.wiki_pages.each do |page| %>
      <li>
        <%= link_to page.title, wiki_page_path(page) %> |
        <%= link_to 'Edit', edit_wiki_page_path(page) %> |
        <%= link_to 'Delete', wiki_page_path(page), method: :delete, data: { confirm: 'Are you sure you want to delete this page?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pages yet. <%= link_to 'Create a page', new_wiki_wiki_topic_wiki_page_path(@wiki, @wiki_topic) %></p>
<% end %>

<%= link_to 'Back to Topic', wiki_topic_path(@wiki_topic) %> |
<%= link_to 'Create New Page', new_wiki_wiki_topic_wiki_page_path(@wiki, @wiki_topic) %>
