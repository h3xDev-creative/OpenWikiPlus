<h1>Your Wikis</h1>

<% if @wikis.present? %>
  <ul>
    <% @wikis.each do |wiki| %>
      <li>
        <%= link_to wiki.title, wiki_path(wiki) %> 
        <%= link_to 'Edit', edit_wiki_path(wiki) %> |
        <%= link_to 'Delete', wiki_path(wiki), method: :delete, data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't created any wikis yet. <%= link_to 'Create your first wiki', new_wiki_path %></p>
<% end %>
