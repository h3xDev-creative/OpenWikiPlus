<h1><%= @wiki.title %></h1>

<p><%= @wiki.description %></p>

<% if @wiki.wiki_topics.any? %>
  <h2>Topics</h2>
  <ul>
    <% @wiki.wiki_topics.each do |topic| %>
      <li>
        <%= link_to topic.title, wiki_topic_path(topic) %> 
        <%= link_to 'Edit', edit_wiki_topic_path(topic) %> |
        <%= link_to 'Delete', wiki_topic_path(topic), method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No topics available. <%= link_to 'Create a topic', new_wiki_wiki_topic_path(@wiki) %></p>
<% end %>

<%= link_to 'Edit Wiki', edit_wiki_path(@wiki) %> |
<%= link_to 'Back to Wikis', wikis_path %>
