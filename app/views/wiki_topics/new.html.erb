<h1>Create a New Topic for Wiki: <%= @wiki.title %></h1>

<%= form_with model: @wiki_topic, url: wiki_wiki_topics_path(@wiki), local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Topic Title' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, 'Topic Content' %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Topic', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Wiki', wiki_path(@wiki) %> |
<%= link_to 'Back to Topics', wiki_wiki_topics_path(@wiki) %>
