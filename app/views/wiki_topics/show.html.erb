<h1><%= @wiki_topic.title %></h1>

<p><%= @wiki_topic.content %></p>

<% if @wiki_topic.wiki_pages.any? %>
  <h2>Pages</h2>
  <ul>
    <% @wiki_topic.wiki_pages.each do |page| %>
      <li>
        <%= link_to page.title, wiki_page_path(page) %> 
        <%= link_to 'Edit', edit_wiki_page_path(page) %> |
        <%= link_to 'Delete', wiki_page_path(page), method: :delete, data: { confirm: 'Are you sure you want to delete this page?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pages available for this topic. <%= link_to 'Create a page', new_wiki_wiki_topic_wiki_page_path(@wiki, @wiki_topic) %></p>
<% end %>

<%= link_to 'Back to Wiki', wiki_path(@wiki) %> |
<%= link_to 'Back to Topics', wiki_wiki_topics_path(@wiki) %> |
<%= link_to 'Edit Topic', edit_wiki_topic_path(@wiki_topic) %>
