<%= form_with model: @setting, local: true do |form| %>
  <div class="form-group">
    <%= form.label :theme, "Choose a Theme" %>
    <%= form.select :theme, options_for_select(['default', 'dark', 'light'], @setting.theme), class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
