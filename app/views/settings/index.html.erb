<h1>Settings</h1>

<%= link_to 'Back to Wiki', wiki_path(current_user.wiki) %>

<div class="settings-form">
  <h3>Select Your Theme</h3>
  
  <%= form_with model: @setting, url: settings_path, method: :patch, local: true do |form| %>
    <div class="form-group">
      <%= form.label :theme, "Choose a Theme:" %>
      <%= form.select :theme, options_for_select(['default', 'dark', 'light'], @setting.theme), class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= form.submit 'Save Settings', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
