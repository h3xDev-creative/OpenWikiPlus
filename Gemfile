# Ruby on Rails
gem 'rails', '~> 6.0.0'

# Database
gem 'sqlite3', '~> 1.4', group: [:development, :test]

# Authentication (for user management, if needed)
gem 'devise'

# Styling (for modular CSS with options)
gem 'sass-rails', '>= 6'

# JavaScript
gem 'webpacker'

# To generate forms, fields, etc., using Bootstrap or another framework
gem 'bootstrap', '~> 4.5'

# For handling fonts and images through asset pipeline
gem 'font-awesome-sass', '~> 5.15.1'

# For managing environments
gem 'dotenv-rails', groups: [:development, :test]

# Allows the use of newer features in Ruby, such as 'safe navigation operator'
gem 'ruby2_keywords', '0.0.5'

# For easier testing
gem 'rspec-rails', group: [:development, :test]

# Pagination gem (if you plan to add pagination later)
gem 'kaminari'

# For background jobs (if you plan on adding features that require async processing)
gem 'sidekiq'

# For security headers
gem 'secure_headers'

# To handle image uploading (optional)
gem 'carrierwave'

# For user settings management
gem 'settingslogic'

# For error tracking (optional but useful)
gem 'exception_notification'

# For internationalization support
gem 'rails-i18n'

# Frontend styling (optional, for grid layout or responsive design)
gem 'simple_form'

# For running JavaScript in the browser (Ajax, jQuery)
gem 'jquery-rails'

# For generating API documentation (optional)
gem 'rswag'

# Development & Debugging
gem 'pry-rails'

# For testing email functionality in development
gem 'letter_opener'

# For managing your application's session store
gem 'redis'

# For managing SSL
gem 'rails_12factor', group: :production

# To use the latest features in Active Record and better data handling
gem 'activerecord-import'

# For managing email delivery
gem 'mailcatcher', group: [:development, :test]

# Code linting and formatting
gem 'rubocop', group: [:development]
